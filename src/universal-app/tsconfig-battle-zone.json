{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@covalent/core": ["./core"],
      "@covalent/core/*": ["./core/*"]
    }
  },
  "files": [
    "main.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true
  }
}
